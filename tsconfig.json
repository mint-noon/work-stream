{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "outDir": "./lib/",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "tsBuildInfoFile": "./",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
